rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products: public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: owner read/create, admin read
    match /users/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.isAdmin == false;
      allow update: if isAdmin() ||
                    (request.auth != null && request.auth.uid == userId
                     && request.resource.data.isAdmin == resource.data.isAdmin);
    }

    // Orders: owner read/create, admin read/update
    match /orders/{orderId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.uid == request.auth.uid);
      allow create: if isAdmin() || (request.auth != null && request.resource.data.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Promo codes: public read (for validation), admin write
    match /promoCodes/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tickets: owner read/create/update (add messages), admin full access
    match /tickets/{ticketId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.uid == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update: if isAdmin() || (request.auth != null && resource.data.uid == request.auth.uid);
      allow delete: if isAdmin();
    }

    function isAdmin() {
      return request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
